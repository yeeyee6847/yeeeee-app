<div class="d-flex justify-content-between">

<h1 class="mb-3 mt-3">Spending Types</h1>

<div class="align-self-end mb-3">
    <%= link_to "Create", new_spending_type_path, class:"btn btn-outline-primary" %>
</div>

</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col" style="width: 60px;">No.</th>
                <th scope="col">Value</th>
                <th scope="col" style="width: 100px;">Position</th>
                <th scope="col" style="width: 110px;">Created At</th>
                <th scope="col" style="width: 110px;">Updated At</th>
                <th scope="col" style="width: 70px;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if @spending_types.any? %>
                <% @spending_types.each_with_index do | spending_type, index | %>
                    <tr>
                        <th scope="row"><%= index + 1%></th>
                        <td><%= spending_type.value %></td>
                        <td><%= spending_type.position %></td>
                        <td><%= spending_type.created_at.strftime('%Y-%m-%d') %></td>
                        <td><%= spending_type.updated_at.strftime('%Y-%m-%d') %></td>
                        <td style="text-align: center;">
                            <%= link_to image_tag('edit.png', width: '20', title: 'Edit'), edit_spending_type_path(spending_type), class: "tooltips" %>
                            <%= link_to image_tag('delete.png', width: '20', title: 'Delete'), spending_type, class: "tooltips", data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this record? This action cannot be undone!"} 
                            %>
                        </td>
                    </tr>
                <% end %>
            <% else %>
                <tr><td colspan="6">No records found.</td></tr>
            <% end %>         
        </tbody>
    </table>
</div>



