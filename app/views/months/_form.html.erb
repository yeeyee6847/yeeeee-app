<%= render partial: 'layouts/page_back_button', locals: { path: months_path } %>
<%= form_with model: object do |form| %>
  <div class="form-container">
    <div class="form-title">Month Information</div>

    <div class="mb-3">
        <%= form.label :value, class: "form-label require-field" %>
        <%= form.text_field :value, value: object.value, class: object.errors.full_messages_for(:value).any? ? "is-invalid form-control " : "form-control"  %>
        <% object.errors.full_messages_for(:value).each do |message| %>
            <div class="validation-message"><%= message %></div>
        <% end %>
    </div>

    <%= form.label :position, class: "form-label require-field" %>
    <%= form.select :position, options_for_select(@position_dropdown, object.position), { prompt: 'Please Select'}, class: object.errors.full_messages_for(:position).any? ? "is-invalid form-select " : "form-select" %>
    <% object.errors.full_messages_for(:position).each do |message| %>
        <div class="validation-message"><%= message %></div>
    <% end %>

    <div class="mt-4 mb-2">
        <%= form.submit "Submit", class: "btn btn-outline-primary" %>
    </div>
  </div>

<% end %>