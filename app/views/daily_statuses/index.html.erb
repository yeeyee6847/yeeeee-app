<div class="d-flex justify-content-between">

<h1 class="mb-3 mt-3">Daily Statuses</h1>

<div class="align-self-end mb-3">
    <%= link_to "Create", new_daily_status_path, class:"btn btn-outline-primary" %>
</div>

</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col" style="width: 60px;">No.</th>
                <th scope="col">Value</th>
                <th scope="col" style="width: 100px;">Position</th>
                <th scope="col" style="width: 110px;">Created At</th>
                <th scope="col" style="width: 110px;">Updated At</th>
                <th scope="col" style="width: 70px;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if @daily_statuses.any? %>
                <% @daily_statuses.each_with_index do | daily_status, index | %>
                    <tr>
                        <th scope="row"><%= index + 1%></th>
                        <td><%= daily_status.value %></td>
                        <td><%= daily_status.position %></td>
                        <td><%= daily_status.created_at.strftime('%Y-%m-%d') %></td>
                        <td><%= daily_status.updated_at.strftime('%Y-%m-%d') %></td>
                        <td style="text-align: center;">
                            <%= link_to image_tag('edit.png', width: '20', title: 'Edit'), edit_daily_status_path(daily_status), class: "tooltips" %>
                            <%= link_to image_tag('delete.png', width: '20', title: 'Delete'), daily_status, class: "tooltips", data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this record? This action cannot be undone!"} 
                            %>
                        </td>
                    </tr>
                <% end %>
            <% else %>
                <tr><td colspan="6">No records found.</td></tr>
            <% end %>         
        </tbody>
    </table>
</div>



