<div class="d-flex justify-content-between">

<h1 class="mb-3 mt-3">Yearly Usages</h1>

<div class="align-self-end mb-3">
    <%= link_to "Create", new_yearly_usage_path, class:"btn btn-outline-primary" %>
</div>

</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col" style="width: 60px;">No.</th>
                <th scope="col">Year</th>
                <th scope="col" style="width: 130px;">Total Amount</th>
                <th scope="col" style="width: 110px;">Created At</th>
                <th scope="col" style="width: 100px;">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if @yearly_usages.any? %>
                <% @yearly_usages.each_with_index do | yearly_usage, index | %>
                    <tr>
                        <th scope="row"><%= index + 1%></th>
                        <td><%= yearly_usage.year %></td>
                        <td><%= number_to_currency(yearly_usage.total_amount, precision: 2, unit: 'RM ') %></td>
                        <td><%= yearly_usage.created_at.strftime('%Y-%m-%d') %></td>
                        <td>
                            <%= link_to image_tag('view.png', width: '20', title: 'Edit'), yearly_usage, class: "tooltips" %>
                            <%= link_to image_tag('delete.png', width: '20', title: 'Delete'), yearly_usage_path(yearly_usage), class: "tooltips", data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this record? This action cannot be undone!"} 
                            %>
                        </td>
                    </tr>
                <% end %>
            <% else %>
                <tr><td colspan="5">No records found.</td></tr>
            <% end %>         
        </tbody>
    </table>
</div>
