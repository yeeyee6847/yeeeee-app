<%= render partial: 'layouts/page_back_button', locals: { path: yearly_usages_path } %>

<%= form_with model: object do |form| %>
  <div class="form-container">
    <div class="form-title">Yearly Usage Information</div>

    <%= form.label :year, class: "form-label require-field" %>
    <%= form.select :year, options_for_select(@year_dropdown, object.year), { prompt: 'Please Select'}, class: object.errors.full_messages_for(:year).any? ? "is-invalid form-select " : "form-select" %>
    <% object.errors.full_messages_for(:year).each do |message| %>
        <div class="validation-message"><%= message %></div>
    <% end %>

    <div class="mt-4 mb-2">
        <%= form.submit "Submit", class: "btn btn-outline-primary" %>
    </div>
  </div>

<% end %>