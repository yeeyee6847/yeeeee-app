<%= form_with model: @yearly_usage do |form| %>
  <div class="form-container">
    <div class="form-title">Yearly Usage Information</div>

    <%= form.label :year, class: "form-label require-field" %>
    <%= form.select :year, options_for_select(@year_dropdown, @yearly_usage.year), { prompt: 'Please Select'}, class: article.errors.full_messages_for(:year).any? ? "is-invalid form-select " : "form-select" %>
    <% article.errors.full_messages_for(:year).each do |message| %>
        <div class="validation-message"><%= message %></div>
    <% end %>

    <div class="mt-4 mb-2">
        <%= form.submit "Submit", class: "btn btn-outline-primary" %>
    </div>
  </div>

<% end %>